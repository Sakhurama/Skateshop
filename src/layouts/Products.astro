---
import Navbar from "../components/Navbar.astro";
import { type CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'products'>['data'];

const { name , image , price , description , category , brand} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{name}</title>
</head>
<body>
    <Navbar />
    <main class="container mx-auto p-4">
        <div class="flex flex-wrap items-center justify-center gap-4">
            <img
            src={image}
            alt=""
            class="h-80 w-1/4 object-contain transition duration-500 group-hover:scale-105 sm:h-96"
            />

            <div class="relative border border-gray-100 bg-white p-6">
                <span class="whitespace-nowrap bg-yellow-400 px-3 py-1.5 text-xs font-medium">{category}</span>

                <h3 class="mt-4 text-lg font-medium text-gray-900">{name}</h3>
                <p class="text-base text-gray-800">{brand}</p>
                <p class="mt-1.5 text-base text-gray-800">{description}</p>
                <p class="mt-1.5 text-sm text-gray-700">${price}</p>

                <form class="mt-4">
                    <button
                    class="block w-full rounded bg-yellow-400 p-4 text-sm font-medium transition hover:scale-105"
                    >
                    Comprar
                    </button>
                </form>
            </div>
        </div>
    </main>
</body>
</html>